<body>
   <h1 class="text-center mt-3"> Agendar Consulta</h1>
         <hr>
   <div class="container-lg">

    <form action="/create" method="post">
        <div class="form-label">
        <input type="text" name="name" id="name" placeholder="Nome do paciente" class="form-control">
        </div>
        
        <div class="form-label">
            <input type="email" name="email" id="email" placeholder="email@email.com" class=" form-control">
        </div>
        <div class="form-label">
            <input type="text" name="cpf" id="cpf" placeholder="CPF" class="cpf form-control">
        </div>
        
        <div class="form-label">
            <input type="text" name="description" id="description" placeholder="DescriÃ§Ã£o" class="form-control">
        </div>
        <div class="form-label">
            <input type="date" name="date" id="date" placeholder="Data" class="rounded border mt-2 ">
        </div>
        <div class="form-label">
            <input type="time" name="time" id="time" placeholder="time" class="rounded border mt-2 ">
        </div>

        <div class="d-grid gap-2 col-6 mx-auto">
           <button type="submit" class="btn btn-success btn-block mt-3" style="background-color: #262ae4;">Agendar</button>
          </div>
        
        </form>
   </div>
 
</body>
